<% if @monster.errors.any? %>
  <% @monster.errors.full_messages.each do |error| %>
    <%= error %>
  <% end %>
<% end %>


<%= form_for @monster do |f| %>

  <%= f.label 'Monster Name' %>
  <%= f.text_field :name %><br>

  <%= f.label 'What type of monster is it?' %>
  <%= f.text_field :type %><br>


  <%= f.label 'Tell me about the monster' %>
  <%= f.text_area :description %><br>

  <%= f.label "What's the visual description?" %>
  <%= f.text_area :visual_desc %><br>

  <%= f.label "What's the challenge rating (CR)?" %>
  <%= f.text_field :cr %><br>

  <%= f.label "How much experience do adventurers get for vanquishing this monster?" %>
  <%= f.number_field :exp %><br>

  <%= f.label 'What environment does it thrive in?' %>
  <%= f.select :environment, options_for_select(["Any Terrain", "Any Terrain (Cold)", "Any Terrain (Temperate)", "Any Terrain (Warm)", "Coastline", "Desert (cold)", "Desert (Temperate)", "Desert (Warm)", "Forest (Cold)", "Forest (Temperate)", "Forest (Warm)", "Rivers/Lakes", "Hills (Cold)", "Hills (Temperate)", "Hills (Warm)", "Mountains (Cold)", "Mountains (Temperate)", "Mountains (Warm)", "Ocean (Cold)", "Ocean (Temperate)", "Ocean (Warm)", "Plains (Cold)", "Plains (Temperate)", "Plains (Warm)", "Planar (Abaddon—Neutral Evil)", "Planar (Abyss—Chaotic Evil)", "Planar (Elysium—Chaotic Good)", "Planar (Heaven—Lawful Good)", "Planar (Hell—Lawful Evil)", "Planar (Plane of Air)", "Planar (Plane of Earth)", "Planar (Plane of Fire)", "Planar (Plane of Water)", "Swamp (Cold)", "Swamp (Temperate)", "Swamp (Warm)", "Underground", "Urban"])%> <br>

  <%= f.label 'What does your monster look like?' %>
  <%= f.file_field :photo %> <br>

  <%= f.submit %>
  <% end %>